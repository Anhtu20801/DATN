@model QLSV.Model.Models.Classroom

@{
    ViewData["Title"] = "Sửa nội dung lớp học";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>@ViewBag.Title</h3>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClassroomId" />
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Môn học</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label">Giáo viên</label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên lớp</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Thời gian bắt đầu</label>
                <input asp-for="StartTime" class="form-control" type="date" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">Thời gian kết thúc</label>
                <input asp-for="EndTime" class="form-control" type="date" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-1"></div>
        
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="Semester" class="control-label">Học kỳ</label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson" class="control-label">Tiết học</label>
                <input asp-for="Lesson" class="form-control" />
                <span asp-validation-for="Lesson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson" class="control-label">Số lượng sinh viên</label>
                <input asp-for="MaxStudent" class="form-control" />
                <span asp-validation-for="Lesson" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

