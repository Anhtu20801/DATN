@model QLSV.Model.Models.Classroom

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Classroom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Môn học
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-3">
            Giáo viên
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Teacher.Name)
        </dd>
        <dt class = "col-sm-3">
            Thời gian bắt đầu
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-3">
            Thời gian kết thúc
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-3">
            Học kỳ
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Semester)
        </dd>
        <dt class = "col-sm-3">
            Tiết học
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Lesson)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassroomId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
