@model QLSV.Model.Models.Department

@{
    ViewData["Title"] = "Thêm khoa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-10">
        <form method="post" asp-action="Create" style="width:90%; margin: 0 auto;" enctype="multipart/form-data">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="border p-3 mt-4">
                <div class="row pb-6">
                    <h2 class="text-primary">@ViewData["Title"]</h2>
                    <hr />
                </div>

                <div class="mb-3">
                    <label asp-for="Name">Tên khoa</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description">Mô tả</label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="width:150px">Thêm mới</button>
            </div>
        </form>

    </div>
</div>
@ViewBag.Message
<div>
    <a asp-action="Index">Danh sách khoa</a>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
        });
    </script>
}
