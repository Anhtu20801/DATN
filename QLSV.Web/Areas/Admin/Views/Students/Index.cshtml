@model IEnumerable<QLSV.Model.Models.Student>

@{
    ViewData["Title"] = "Danh sách sinh viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã sinh viên
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Lớp
            </th>
            @*<th>
                Ngành học
            </th>*@
            <th>
                Avatar
            </th>
            <th>
                Số điện thoại
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimaryClass.Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Major)
                </td>*@
                <td>
                   @if (item.Avatar != null)
                        {
                            var pathImage = "data:image;base64," + Convert.ToBase64String(item.Avatar);
                            <image src="@pathImage" />
                        }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
